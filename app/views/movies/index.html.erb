<h1>Rotten Mangoes</h1>

<p>Filter your search.</p>

<%= render 'form2' %>

    <%= link_to "Submit a movie!", new_movie_path %>
    <hr>
    <% @movies.each do |movie| %>
      <%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <h3>Release Date - <%= formatted_date(movie.release_date) %></h3>
      <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes | Average Rating: <%= movie.review_average %>/10</h4>
      <p><%= movie.description %></p>
      <hr>
    <% end %>
